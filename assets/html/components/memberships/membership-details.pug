//- Mixin To Show Membership Details
mixin membership_detail(detail_title , detail_price , detail_content_1 , detail_content_2 , detail_content_3)
  div(class="membershipDetail col-md-4")
    // Membership Title 
    .membershipDetail_title
      h3= detail_title 
      span= detail_price
      hr
    // Membership Content 
    .membershipDetail_content
      ul
        li
          i(class="far fa-check-circle")
          span= detail_content_1
        li
          i(class="far fa-check-circle")
          span= detail_content_2
        li
          i(class="far fa-check-circle")
          span= detail_content_3
      button JOIN NOW
